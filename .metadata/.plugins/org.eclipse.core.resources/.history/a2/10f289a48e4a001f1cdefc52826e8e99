package com.lucas.models;

import java.io.Serializable;
import java.util.Set;

import org.springframework.data.annotation.Id;

import com.fasterxml.jackson.annotation.JsonIgnore;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.OneToMany;
import jakarta.persistence.Table;

@Entity
@Table(name = "barbearia")
public class Barbearia implements Serializable {

	private static final long serialVersionUID = 1L;

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private Long id;
	
	@Column(name = "nome_barbearia", nullable = false)
	private String nome;
	
	@Column
	private String endereco;
	
	@Column
	private String telefone;
	
	@Column
	private String email;
	
	@OneToMany(mappedBy = "barbearia", cascade = CascadeType.ALL, orphanRemoval = true)
	@JoinColumn(name = "barbeiro_id")
    @JsonIgnore
	private Set<Barbeiro> barbeiros;
	
	@OneToMany
    @JoinColumn(name = "administrador_id")
    @JsonIgnore
    private Set<Administrador> administrador;

	public Barbearia() {
		super();
	}
	
	public Barbearia(Long id, String nome, String endereco, String telefone, String email, Set<Barbeiro> barbeiros,
			Set<Administrador> administrador) {
		super();
		this.id = id;
		this.nome = nome;
		this.endereco = endereco;
		this.telefone = telefone;
		this.email = email;
		this.barbeiros = barbeiros;
		this.administrador = administrador;
	}

	
	
	
	
}
